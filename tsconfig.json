{
    "extends": "@imacdonald/phantom-config/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "rootDir": "src",
        "emitDeclarationOnly": true,
        "paths": {
            "@components": ["./src/components"],
            "@components/*": ["./src/components/*"],
            "@contexts": ["./src/contexts"],
            "@hooks": ["./src/hooks"],
            "@icons": ["./src/icons"],
            "@styles": ["./src/styles"],
            "@styles/*": ["./src/styles/*"],
            "@types": ["./src/types"],
            "@utility": ["./src/utility"]
        }
    },
    "include": ["src", "types.d.ts"]
}
