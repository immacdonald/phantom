{
    "compilerOptions": {
        "declaration": true,
        "target": "ES2020",
        "lib": ["ES2020", "dom"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "lib",
        "module": "ES2020",
        "skipLibCheck": true,
        "rootDir": "src",
        "emitDeclarationOnly": true,
        "strictPropertyInitialization": false,
        "jsx": "react-jsx",
        // Linting
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "types.d.ts"]
}
