{
    "extends": "phantom-config/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@components": ["./src/components"],
            "@components/*": ["./src/components/*"],
            "@contexts": ["./src/contexts"],
            "@hooks": ["./src/hooks"],
            "@styles": ["./src/styles"],
            "@styles/*": ["./src/styles/*"],
            "@types": ["./src/types"],
            "@utility": ["./src/utility"]
        }
    },
    "include": ["src", "types.d.ts"],
    "exclude": ["docs"]
}
